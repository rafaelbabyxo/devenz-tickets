generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model User {
  id       String     @id @default(cuid())
  email    String     @unique
  company  String
  password String
  Sessions Sessions[]
  Tickets  Ticket[]
}

model Sessions {
  id        String   @id @default(cuid())
  userId    String
  token     String
  expiresAt DateTime
  valid     Boolean
  createdAt DateTime @default(now())
  User      User     @relation(fields: [userId], references: [id])
}

model Ticket {
  id         String   @id @default(cuid())
  cc         String?  // Opcional
  subject    String
  message    String
  files      String[] @default([]) // Lista obrigatória com valor padrão vazio
  company    String
  priority   String
  department String
  userId     String
  User       User     @relation(fields: [userId], references: [id])
}
